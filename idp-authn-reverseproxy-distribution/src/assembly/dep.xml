<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
        <format>tar.bz2</format>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>../idp-authn-api-reverseproxy/target</directory>
            <outputDirectory>edit-webapp/WEB-INF/lib</outputDirectory>
            <includes>
                <include>idp-authn-api-reverseproxy-*.jar</include>
            </includes>
            <excludes>
                <exclude>*test*.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>../idp-authn-impl-reverseproxy/target</directory>
            <outputDirectory>edit-webapp/WEB-INF/lib</outputDirectory>
            <includes>
                <include>idp-authn-impl-reverseproxy-*.jar</include>
            </includes>
            <excludes>
                <exclude>*test*.jar</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>conf/authn/*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
